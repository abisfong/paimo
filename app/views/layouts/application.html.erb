<!DOCTYPE html>
<html>
  <head>
    <title>Paimo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      <% if logged_in? %>
        window.currentUser = {}
        window.currentUser.id = "<%=current_user.id%>"
        window.currentUser.username = "<%=current_user.username%>"
      <% end %>
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&family=Roboto:wght@100;300;400;500&family=Work+Sans:wght@200;300;400;500&display=swap" rel="stylesheet">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
