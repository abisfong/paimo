<!DOCTYPE html>
<html>
  <head>
    <title>Paymo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      <% if logged_in? %>
        window.currentUser = {}
        window.currentUser.id = "<%=current_user.id%>"
        window.currentUser.username = "<%=current_user.username%>"
      <% end %>
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
